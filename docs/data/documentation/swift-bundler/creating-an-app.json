  },
  "primaryContentSections" : [
    {
      "content" : [
        {
          "anchor" : "Overview",
          "level" : 2,
          "text" : "Overview",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Use the following command to create a new app from the SwiftUI template.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "# Create a new app from the SwiftUI template",
            "swift bundler create HelloWorld --template SwiftUI",
            "cd HelloWorld"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "To learn more about package templates, see ",
              "type" : "text"
            },
            {
              "identifier" : "doc:\/\/swift-bundler\/documentation\/swift-bundler\/package-templates",
              "isActive" : true,
              "type" : "reference"
            },
            {
              "text" : ".",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "Running-the-app",
          "level" : 2,
          "text" : "Running the app",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Use the ",
              "type" : "text"
            },
            {
              "code" : "run",
              "type" : "codeVoice"
            },
            {
              "text" : " command to build and run the app.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "swift bundler run"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "Use ",
              "type" : "text"
            },
            {
              "code" : "--platform",
              "type" : "codeVoice"
            },
            {
              "text" : "\/",
              "type" : "text"
            },
            {
              "code" : "-p",
              "type" : "codeVoice"
            },
            {
              "text" : " to specify a target platform. On macOS this includes",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "all Apple platforms (other than watchOS), but on Linux you’re limited to Linux.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "# Run the app on an iOS simulator. If you don't specify a simulator then Swift",
            "# Bundler will attempt to use the first compatible booted simulator it finds.",
            "swift bundler run --platform iOSSimulator --simulator \"iPhone 16\""
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "anchor" : "Distributing-the-app",
          "level" : 2,
          "text" : "Distributing the app",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Use the ",
              "type" : "text"
            },
            {
              "code" : "bundle",
              "type" : "codeVoice"
            },
            {
              "text" : " command to create an app bundle that you can distribute to",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "users.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "text" : "On macOS it is recommended that you use the ",
              "type" : "text"
            },
            {
              "code" : "-c release -u",
              "type" : "codeVoice"
            },
            {
              "text" : " options to create",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "an optimized universal binary (for running on both Intel and Apple Silicon",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "Macs).",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "inlineContent" : [
            {
              "text" : "On Linux you’ll want to supply either ",
              "type" : "text"
            },
            {
              "code" : "--bundler linuxAppImage",
              "type" : "codeVoice"
            },
            {
              "text" : " or",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "code" : "--bundler linuxRPM",
              "type" : "codeVoice"
            },
            {
              "text" : ", since the default Linux bundler (",
              "type" : "text"
            },
            {
              "code" : "linuxGeneric",
              "type" : "codeVoice"
            },
            {
              "text" : ") is",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "targeted at development and not distribution.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "# Build the app. The result will be in `.build\/bundler`",
            "swift bundler bundle -c release"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "Add ",
              "type" : "text"
            },
            {
              "code" : "--universal",
              "type" : "codeVoice"
            },
            {
              "text" : " when targeting macOS if you desire a universal build (i.e. a",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "build that runs on both arm64 and x86_64).",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "Running-the-app-from-Xcode",
          "level" : 2,
          "text" : "Running the app from Xcode",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Run the ",
              "type" : "text"
            },
            {
              "code" : "generate-xcode-support",
              "type" : "codeVoice"
            },
            {
              "text" : " command if you want to use Xcode as your IDE.",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "This command only needs to be run once unless you delete the ",
              "type" : "text"
            },
            {
              "code" : ".swiftpm",
              "type" : "codeVoice"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "directory.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "# Creates the files necessary to get xcode to run the package as an app",
            "swift bundler generate-xcode-support"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "To open the package in Xcode, just run ",
              "type" : "text"
            },
            {
              "code" : "open Package.swift",
              "type" : "codeVoice"
            },
            {
              "text" : ", or use Finder to",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "open ",
              "type" : "text"
            },
            {
              "code" : "Package.swift",
              "type" : "codeVoice"
            },
            {
              "text" : " with Xcode. To run the app, select the scheme with the",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "same name as your app and then click run.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        }
      ],
      "kind" : "content"
    }
  ],

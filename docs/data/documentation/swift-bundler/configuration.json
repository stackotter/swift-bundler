            {
              "text" : " ",
              "type" : "text"
            },
            {
              "code" : "type",
              "type" : "codeVoice"
            },
            {
              "text" : " and ",
              "type" : "text"
            },
            {
              "code" : "value",
              "type" : "codeVoice"
            },
            {
              "text" : " fields. For this reason, dictionaries with a ",
              "type" : "text"
            },
            {
              "code" : "type",
              "type" : "codeVoice"
            },
            {
              "text" : " field",
              "type" : "text"
            },
            {
              "text" : " ",
              "type" : "text"
            },
            {
              "text" : "also require disambiguation.",
              "type" : "text"
            }

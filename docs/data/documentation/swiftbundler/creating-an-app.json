    "roleHeading" : "Article",
    "title" : "Creating an app"
  },
  "primaryContentSections" : [
    {
      "content" : [
        {
          "anchor" : "Overview",
          "level" : 2,
          "text" : "Overview",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Use the following command to create a new app from the SwiftUI template.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "# Create a new app from the SwiftUI template",
            "swift bundler create HelloWorld --template SwiftUI",
            "cd HelloWorld"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "To learn more about package templates, see ",
              "type" : "text"
            },
            {
              "identifier" : "doc:\/\/SwiftBundler\/documentation\/SwiftBundler\/package-templates",
              "isActive" : true,
              "type" : "reference"
            },
            {
              "text" : ".",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "anchor" : "Running-the-app",
          "level" : 2,
          "text" : "Running the app",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Use the ",
              "type" : "text"
            },
            {
              "code" : "run",
              "type" : "codeVoice"
            },
            {
              "text" : " command to build and run the app.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "swift bundler run"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "anchor" : "Distributing-the-app",
          "level" : 2,
          "text" : "Distributing the app",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Use the ",
              "type" : "text"
            },
            {
              "code" : "bundle",
              "type" : "codeVoice"
            },
            {
              "text" : " command to create an app bundle that you can distribute to users. It is recommended that you use the ",
              "type" : "text"
            },
            {
              "code" : "-c release -u",
              "type" : "codeVoice"
            },
            {
              "text" : " options to create an optimized universal binary (for running on both Intel and Apple Silicon Macs).",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "# Build the app and output it to the current directory.",
            "swift bundler bundle -o . -c release -u"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "anchor" : "Running-the-app-from-Xcode",
          "level" : 2,
          "text" : "Running the app from Xcode",
          "type" : "heading"
        },
        {
          "inlineContent" : [
            {
              "text" : "Run the ",
              "type" : "text"
            },
            {
              "code" : "generate-xcode-support",
              "type" : "codeVoice"
            },
            {
              "text" : " command if you want to use Xcode as your IDE. This command only needs to be run once unless you delete the ",
              "type" : "text"
            },
            {
              "code" : ".swiftpm",
              "type" : "codeVoice"
            },
            {
              "text" : " directory.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        },
        {
          "code" : [
            "# Creates the files necessary to get xcode to run the package as an app",
            "swift bundler generate-xcode-support"
          ],
          "syntax" : "sh",
          "type" : "codeListing"
        },
        {
          "inlineContent" : [
            {
              "text" : "To open the package in Xcode, just run ",
              "type" : "text"
            },
            {
              "code" : "open Package.swift",
              "type" : "codeVoice"
            },
            {
              "text" : ", or use Finder to open ",
              "type" : "text"
            },
            {
              "code" : "Package.swift",
              "type" : "codeVoice"
            },
            {
              "text" : " with Xcode. To run the app, just select the scheme with the same name as your app and then click run.",
              "type" : "text"
            }
          ],
          "type" : "paragraph"
        }
      ],
      "kind" : "content"
    }
  ],
